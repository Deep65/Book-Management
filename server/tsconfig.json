{
  "compilerOptions": {
    "target": "es2017", // Ensure target is set to es2017 or higher
    "module": "es2022", // Set module to es2022 or another suitable option
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "types": ["node"],
    "strict": true, // You may adjust strict settings as per your project's requirements
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false
  },
  "exclude": ["node_modules"]
}
